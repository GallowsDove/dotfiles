    // Choose the order of the modules
	
    "modules-left": [
		"niri/workspaces",
		"wlr/taskbar"
	],
    "modules-center": [],
    "modules-right": [
		"mpris",
		"pulseaudio",
		"network",
		"cpu",
		"memory",
		"tray",
		"clock",
		"custom/lock",
		"custom/logout",
		"custom/poweroff"
	],
	"custom/lock": {
